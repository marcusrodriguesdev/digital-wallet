{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["plugin:react/recommended", "standard-with-typescript", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json",
    "createDefaultProgram": true
  },
  "settings": {
    "import/resolver": {
        "node": {},
      "typescript": {}
    },
    "react": {
        "version": "detect"
      }
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "off",
    "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
  }
}